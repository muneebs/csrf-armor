{
	"name": "csrf-armor",
	"version": "0.1.0",
	"description": "Framework-agnostic CSRF protection library",
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "pnpm -r run build",
		"dev": "pnpm -r run dev",
		"test": "pnpm -r run test",
		"test:watch": "pnpm -r run test:watch",
		"type-check": "pnpm -r run type-check",
		"lint": "pnpm biome lint --write packages/*/src",
		"lint:check": "pnpm biome lint packages/*/src",
		"format": "pnpm biome format --write packages/*/src",
		"format:check": "pnpm biome format packages/*/src",
		"clean": "pnpm -r run clean && rm -rf node_modules/.cache",
		"clean:all": "pnpm clean && rm -rf node_modules pnpm-lock.yaml && pnpm -r exec rm -rf node_modules dist",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "pnpm build && changeset publish"
	},
	"keywords": [
		"csrf",
		"security",
		"protection",
		"middleware",
		"nextjs",
		"nodejs",
		"express",
		"vite",
		"framework-agnostic"
	],
	"author": "Your Name",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/muneebs/csrf-armor"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"bugs": {
		"url": "https://github.com/muneebs/csrf-armor/issues"
	},
	"homepage": "https://github.com/muneebs/csrf-armor#readme",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@10.2.1+sha512.398035c7bd696d0ba0b10a688ed558285329d27ea994804a52bad9167d8e3a72bcb993f9699585d3ca25779ac64949ef422757a6c31102c12ab932e5cbe5cc92",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.2",
		"@types/node": "^20.11.0",
		"@vitest/coverage-v8": "^3.1.4",
		"@vitest/ui": "^1.2.0",
		"jsdom": "^26.1.0",
		"typescript": "^5.3.3",
		"vitest": "^3.1.4"
	},
	"pnpm": {
		"overrides": {}
	}
}
